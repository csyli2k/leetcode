class Solution:
    def findTargetSumWays(self, nums: List[int], target: int) -> int:
        dp={}
        def dfs(curr, curr_sum):
            if curr_sum==target and curr== len(nums):
                return 1
            if curr>=len(nums):
                return 0

            if (curr, curr_sum) in dp:
                return dp[(curr, curr_sum)]
            dp[(curr, curr_sum)]= dfs(curr+1, curr_sum+nums[curr])+dfs(curr+1, curr_sum-nums[curr])
            return dp[(curr, curr_sum)]
        
        return dfs(0,0)